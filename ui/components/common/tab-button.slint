import { Palette } from "../../theme.slint";

export component TabButton inherits Rectangle {
	in property<bool> is-active: false;
	in property<color> bg: Palette.bg_lightgray;
	in property<string> button-text: "Button";

	callback clicked <=> area.clicked;

	background: is-active ? bg.brighter(0.5) : bg;
	border-top-left-radius: 8px;
	border-top-right-radius: 8px;

	height: 30px;

	Text {
		text: button-text;
		font-size: 11px;
		font-weight: 700;
	}

	area := TouchArea {
		mouse-cursor: pointer;
	}
}